  <body>
    <header class="site-header">
      <div class="container">
        <a href="/" class="logo">NodeBlog</a>
        <nav>
          <ul class="nav-links">
            <li><a href="/">Home</a></li>
            <li><a href="/add-post">New Post</a></li>
            <% if (typeof locals.user !== 'undefined' || (typeof session !== 'undefined' && session.isLoggedIn)) { %>
               <% if (locals.user && locals.user.role === 'admin') { %>
                  <li><a href="/admin">Admin</a></li>
               <% } %>
               <li><a href="/logout" class="btn btn-logout">Logout</a></li>
            <% } else { %>
               <li><a href="/login" class="btn btn-primary">Login</a></li>
            <% } %>
          </ul>
        </nav>
      </div>
    </header>
