<%- include("partials/header.ejs") %>

<div class="container main-content">
    <div class="post-page">
        <a href="/" class="btn btn-secondary mb-4" style="margin-bottom: 2rem;">&larr; Back to Home</a>
        
        <article class="post-detail">
            <header class="post-header">
                <h1 class="page-title" style="text-align: left;"><%= post.title %></h1>
                <div class="post-meta">
                    <% if (post.author) { %>
                        <span class="author">By <%= post.author %></span>
                    <% } %>
                    <% if (post.date) { %>
                        <span class="date">â€¢ <%= new Date(post.date).toLocaleDateString() %></span>
                    <% } %>
                </div>
            </header>
            
            <div class="post-content">
                <% if (post.content) { %>
                    <% post.content.split('\n').forEach(paragraph => { %>
                        <% if (paragraph.trim()) { %>
                            <p><%= paragraph %></p>
                        <% } %>
                    <% }) %>
                <% } %>
            </div>
        </article>
    </div>
</div>

<style>
    .post-detail {
        background: var(--card-bg);
        padding: 2.5rem;
        border-radius: var(--radius);
        box-shadow: var(--shadow-sm);
        border: 1px solid var(--border-color);
        max-width: 800px;
        margin: 0 auto;
    }

    .post-header {
        margin-bottom: 2rem;
        border-bottom: 1px solid var(--border-color);
        padding-bottom: 1.5rem;
    }

    .post-content {
        font-size: 1.125rem;
        line-height: 1.8;
        color: var(--text-color);
    }

    .post-content p {
        margin-bottom: 1.5rem;
    }
</style>

<%- include("partials/footer.ejs") %>
